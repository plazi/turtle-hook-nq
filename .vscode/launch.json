  "version": "0.2.0",
  "configurations": [
    {
      "name": "Deno: Run",
      "request": "launch",
      "type": "pwa-node",
      "program": "src/main.ts",
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "deno",
      "runtimeArgs": [
        "run",
        "--v8-flags=--max-old-space-size=8000",
        "--inspect",
        "--allow-net",
        "--allow-read",
        "--allow-write",
        "--allow-run=git,rapper",
        "--allow-env"
      ],
      "attachSimplePort": 9229
    }
  ]
}
